@require '../variables'

@keyframes sway {
  0%, 50%, 100% {
    transform: rotate($saf-sway-angle) translateZ(0)
  }
  25% {
    transform: rotate($saf-sway-angle * -1)
  }
  75% {
    transform: rotate($saf-sway-angle * -1)
  }
}

sway($duration = 6.5s, $delay = 0s, $fill-mode = none, $count = infinite, $timing = ease-in-out)
  // hack to fix jagged edges
  outline: 1px solid transparent
  animation: sway $count $duration $delay $fill-mode $timing
