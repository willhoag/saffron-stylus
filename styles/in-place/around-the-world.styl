@require '../variables'

@keyframes aroundTheWorld {
  0% {
    transform: rotate(0deg) translate3d($saf-distance-from-origin * -1, $saf-distance-from-origin * -1, 0) rotate(0deg)
  }
  100% {
    transform: rotate(360deg) translate3d($saf-distance-from-origin * -1, $saf-distance-from-origin * -1, 0) rotate(-360deg)
  }
}

aroundTheWorld($duration = 2s, $delay = 0s, $fill-mode = none, $count = infinite, $timing = ease-in-out)
  animation: aroundTheWorld $count $duration $delay $fill-mode $timing
