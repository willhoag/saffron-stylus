@require '../variables'

@keyframes sunrise {
  0% {
    transform: rotate(0deg) translate($saf-sunrise-arch) rotate(0deg)
  }
  100% {
    transform: rotate(180deg) translate($saf-sunrise-arch) rotate(-180deg)
  }
}

sunrise($duration = 4s, $delay = 0s, $fill-mode = both, $count = 1, $timing = ease-in-out)
  animation: sunrise $count $duration $delay $fill-mode $timing
