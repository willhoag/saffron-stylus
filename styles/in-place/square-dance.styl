@require '../variables'

@keyframes squareDance {
  0%, 100% {
    transform: translate3d(100%, 0, 0)
  }
  25% {
    transform: translate3d(100%, 100%, 0)
  }
  50% {
    transform: translate3d(0, 100%, 0)
  }
  75% {
    transform: translate3d(0, 0, 0)
  }
}

squareDance($duration = 3s, $delay = 0s, $fill-mode = none, $count = infinite, $timing = ease-in-out)
  animation: squareDance $count $duration $delay $fill-mode $timing
