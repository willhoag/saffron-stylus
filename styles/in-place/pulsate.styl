@require '../variables'

@keyframes pulsate {
  0%, 100% {
    opacity: 1;
    transform: scale(1) translateZ(0)
  }
  50% {
    opacity: 0.85;
    transform: scale($saf-pulsate-scale)
  }
}

pulsate($duration = 1.5s, $delay = 0s, $fill-mode = none, $count = 3)
  animation: pulsate $count $duration $delay $fill-mode
