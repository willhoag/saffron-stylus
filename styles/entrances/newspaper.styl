@require '../variables'

@keyframes newspaper {
  0% {
    opacity: 0;
    transform: rotate(720deg) scale(0.33) translateZ(0)
  }
  100% {
    opacity: 1;
    transform: rotate(0deg) scale(1)
  }
}

newspaper($duration = 1s, $delay = 0s, $fill-mode = both, $count = 1, $timing = ease-in-out)
  animation: newspaper $count $duration $delay $fill-mode $timing