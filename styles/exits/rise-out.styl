@require '../variables'

@keyframes riseOut {
  0% {
    opacity: 1;
    transform: translateZ(0)
  }
  100% {
    opacity: 0;
    transform: translateY($saf-drop-rise-distance * -1)
  }
}

riseOut($duration = 0.5s, $delay = 0s, $fill-mode = forwards)
  animation: riseOut $duration $delay $fill-mode
